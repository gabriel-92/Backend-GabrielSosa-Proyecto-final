<%- include('./partials/head.ejs') %>
    <%- include('./partials/nav.ejs') %>

        <body>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2> list of products</h2>
                        <table>
                            <thead>
                                <tr>
                                    <th>id</th>
                                    <th>Name of product</th>
                                    <th>Price</th>
                                    <th>Photo</th>
                                    <th>description</th>
                                    <th>Category</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach(p=> { %>
                                    <tr>
                                        <td>
                                            <%= p.id %>
                                        </td>
                                        <td>
                                            <%= p.title %>
                                        </td>
                                        <td>
                                            <%= p.price %>
                                        </td>
                                        <td>
                                            <img width="250px" src="<%= p.image %> " />
                                        </td>
                                        <td>
                                            <%= p.description %>
                                        </td>
                                        <td>
                                            <%= p.category %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <%- include('./partials/footer.ejs') %>
        </body>

        </html>